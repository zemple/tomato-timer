{
    "manifest_version": 3,
    "name": "Tomato Clock",
    "version": "1.0.0",
    "description": "A modern pomodoro timer extension",
    "permissions": [
      "storage",
      "notifications",
      "alarms"
    ],
    "background": {
      "service_worker": "src/background/background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_title": "Tomato Clock"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }