{
  "manifest_version": 3,
  "name": "Tomato Timer",
  "version": "1.0.0",
  "description": "A modern pomodoro timer extension with notifications",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Tomato Timer"
  }
}
