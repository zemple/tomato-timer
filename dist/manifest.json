{
  "manifest_version": 3,
  "name": "Tomato Clock",
  "version": "1.0.0",
  "description": "A modern pomodoro timer extension",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tomato Clock"
  }
}